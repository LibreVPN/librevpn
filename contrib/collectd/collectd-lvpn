# Agregar a collectd.conf
#
# <Plugin exec>
#   Exec "daemon:daemon" "/usr/bin/collectd-lvpn" "lvpn" "63"
# </Plugin>

NETWORK="${1:-lvpn}"
DOT="/tmp/${NETWORK}.dot"
INTERVAL="${2:-63}"

if test ! -r "${DOT}" ; then
  echo "No existe ${DOT} o no se puede leer, agreg√° 'GraphDumpFile = ${DOT}' en tinc.conf"
  exit 1
fi

# El script duerme para siempre y cuando se despierta escupe comandos de
# collectd
while sleep ${INTERVAL}; do
  # obtener la cantidad de nodos
  nodes=$(grep label "${DOT}" | cut -d" " -f1 | tr -d "\t" | wc -l)

  # guardar la cantidad de nodos
  stdbuf --output=L \
  printf "PUTVAL \"%s/%s/gauge-nodes\" interval=%d N:%d\n" \
         "${COLLECTD_HOSTNAME:-${HOSTNAME}}" \
         "${NETWORK}" \
         "${INTERVAL}" \
         "${nodes}"
done
