#!/bin/sh
# Para dar de alta la interfaz de la VPN. Usamos una netmask
# que englobe todas las subredes de cada nodo.

# Tomar la IP desde el archivo de configuraci√≥n
# Equivale al primer Subnet del archivo de host
ip="$(grep -m 1 -i "subnet\s*=" /etc/tinc/${NETNAME}/hosts/${NAME} | cut -d'=' -f2)"

ifconfig $INTERFACE $ip netmask 255.255.255.0
